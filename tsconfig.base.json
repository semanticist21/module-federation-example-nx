{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@federation-react/hooks": ["lib/hooks/src/index.ts"],
      "@federation-react/store": ["lib/store/src/index.ts"],
      "@federation-react/ui": ["lib/ui/src/index.ts"],
      "remote1/Module": ["apps/remote1/src/remote-entry.ts"],
      "remote2/Module": ["apps/remote2/src/remote-entry.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
